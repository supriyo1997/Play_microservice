# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index



# Computers list (look at the default values for pagination parameters)
GET     /computers                  controllers.HomeController.list()


# Add computer
#GET     /computers/new              controllers.HomeController.create(request: Request)
POST    /computers                  controllers.HomeController.saveComputer(request: Request)

# Edit existing computer
#GET     /computers/:id              controllers.HomeController.edit(request: Request, id:Long)
#POST    /computers/:id              controllers.HomeController.update(request: Request, id:Long)

#PDF create & Download
POST    /pdf/create/upload/:id           controllers.HomeController.pdfCreateUpload(id:Long)
GET     /pdf/download/:id                controllers.HomeController.pdfDownload(id:Long)
# Delete a computer
GET    /:id/delete       controllers.HomeController.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
